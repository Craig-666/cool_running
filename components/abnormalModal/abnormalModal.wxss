/* components/abnormalModal/abnromalModal.wxss */
input{
  height: 88rpx;
	border: 1rpx solid #e5e5e5;
	border-radius: 6rpx;
  text-align: left;
	padding-left: 10rpx
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 66;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background: rgba(0, 0, 0, .3)
}

.input-modal {
  position: fixed;
  z-index: 88;
  width: 80%;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 20rpx;
  overflow: hidden;
	font-size: 32rpx
}

.input-modal .title{
	font-size: 18px;
  padding: 15px 15px 5px;
}
.input-modal .abitem{
  display: flex;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #efeff4;
  align-items: center;
  justify-content: space-between
}
.un-icon{
  width: 22px;
  height: 22px;
  border-radius: 11px;
  border: 1rpx solid #efeff4;
}

.input-modal .textarea{
  padding: 20rpx 30rpx;
  display: flex;
  box-sizing: border-box;
  border-radius: 8rpx
}
.input-modal .footer{
	border-top: 1rpx solid #e5e5e5;
	height: 88rpx;
	display: flex;
	box-sizing: border-box
}

.input-modal .footer .left ,.input-modal .footer .right{
	width: 50%;
	text-align: center;
	line-height: 88rpx;
	color: #999;

}
.input-modal .footer .left{
	border-right: 1rpx solid #e5e5e5;
	box-sizing: border-box
}
.input-modal .footer .right{
	color: #ff8840
}
.input-modal .footer .left:active ,.input-modal .footer .right:active{
	opacity: 0.6
}
